<view class="container padding order">
  <view class='text-bold text-xl text-black mb20'>{{order.name}}</view>
  <view class='fr'>
    <wxs src="../../utils/filter.wxs" module="filter"></wxs>
    <view class='cu-tag {{filter.toActivityClass(order.status)}}'>{{filter.orderStatus(order.status)}}</view>
  </view>
  <view class='user-info'>
    <image class='cu-avatar round sm' src="{{order.team_avatar || defaultAvatar}}"></image>
    <text>{{order.team_name}}</text>
  </view>
  <view class='module-title'>[ 基本信息 ]</view>
  <view class='ul'>
    <view><text>地　　点</text>{{order.address}}</view>
    <view><text><text style="letter-spacing: 13rpx;">联系</text>人</text>{{order.contact_name}}</view>
    <view><text>联系电话</text>{{order.contact_name}}</view>
    <view><text>关联活动</text>{{order.activity_name}}{{order.activity_id}}</view>
  </view>
  <view class='module-title'>[ 点单内容 ]</view>
  <view class='ul'>
    {{order.desc}}
    <!-- <import src="/wxParse/wxParse.wxml" />
    <template is="wxParse" data="{{wxParseData:article.nodes}}" /> -->
  </view>
  <view class='module-title'>[ 评价 ]</view>
  <view class='ul'>
    {{order.comment}}
  </view>
  <view class='center mt20' wx:if="{{order.user_id == userId}}">
    <i-input value="{{ evaluate }}" placeholder="发表评价" />
    <button class='cu-btn bg-orange round shadow' bindtap="join">发表</button>
  </view>
</view>
<i-toast id="toast" />