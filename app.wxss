@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "/wxParse/wxParse.wxss";

page {
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fff;
}

.border-bottom {
  border-bottom: 1px solid #ddd;
}

.w25 {
  width: 25%;
}

.w50 {
  width: 50%;
}

.w75 {
  width: 75%;
}

.w100 {
  width: 100%;
}

.overhidden {
  overflow: hidden;
}

.relative {
  position: relative;
}

.user-info {
  color: var(--balck);
  display: flex;
  align-items: center;
}

.user-info .cu-avatar {
  margin-right: 12rpx;
}

.user-info .cu-avatar + text {
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
}

.module-title {
  text-align: center;
  color: #999;
  padding: 10rpx 0;
}

.center {
  text-align: center;
}

.level-2 {
  color: #999;
}

.mt20 {
  margin-top: 20rpx;
}

.mb20 {
  margin-bottom: 20rpx;
}

.ml20 {
  margin-left: 20rpx;
}

.mt40 {
  margin-top: 40rpx;
}

.mb40 {
  margin-bottom: 40rpx;
}

.fs10 {
  font-size: 20rpx;
}

.fs12 {
  font-size: 24rpx;
}

.fs14 {
  font-size: 28rpx;
}

.fs16 {
  font-size: 32rpx;
}
.h3 {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}
.status {
  border: 2rpx solid #888;
  padding: 10rpx 18rpx;
  font-size: 24rpx;
}
.cu-btn.xs {
	padding: 0 20rpx;
	font-size: 20rpx;
  height: 36rpx;
  line-height: 36rpx;
}